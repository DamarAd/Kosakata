<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startblue"
    tools:context="com.example.adyun.kosakata.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/orange"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginEnd="24dp"
            app:srcCompat="@drawable/pumpkin" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        >
        <TextView
            android:id="@+id/kartu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Kartu"
            android:textSize="84sp"
            android:textStyle="bold|italic"
            android:gravity="left|center"
            android:layout_marginLeft="24dp"
            android:textColor="@color/graylight"
            />
        <TextView
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Kategori"
            android:textSize="84sp"
            android:textStyle="italic"
            android:gravity="left|bottom"
            android:layout_marginLeft="24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="'Buah-buahan'"
            android:gravity="center"
            android:textSize="36sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginTop="322dp"
        >
        <Button
            android:id="@+id/mulai"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonstylegradientwhite"
            android:onClick="next"
            android:text="Mulai"
            android:textColor="@color/startblue" />

        <Button
            android:layout_below="@id/mulai"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/buttonstylegradientwhite"
            android:text="about"
            android:textColor="@color/startblue" />
    </LinearLayout>
</RelativeLayout>
